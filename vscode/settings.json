{
    "editor.minimap.enabled": false,
    "explorer.autoReveal": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": false,
    "diffEditor.ignoreTrimWhitespace": true,

    "files.defaultLanguage": "json",

    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\bash.exe",
    "terminal.integrated.rendererType": "dom",

    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "statusBar.background": "#5f00af",
        "statusBar.noFolderBackground": "#5f00af",
        "statusBar.debuggingBackground": "#5f00af"
    },

    "vim.statusBarColorControl": false,
    "vim.foldfix": true,
    "vim.hlsearch": true,
    "vim.ignorecase": false,
    "vim.overrideCopy": false,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.useSystemClipboard": true,
    "vim.experimentalOptimizations": true,
    "vim.handleKeys": {
        "CTRL+F": ""
    },
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["ESC"]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["Z", "Z"],
            "commands": [":wq"]
        },
        {
            "before": ["Z", "Q"],
            "commands": [":q!"]
        },
        {
            "before": ["CTRL+F"],
            "commands": ["actions.find"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["Z", "Z"],
            "commands": [":wq"]
        },
        {
            "before": ["Z", "Q"],
            "commands": [":q!"]
        },
        {
            "before": ["CTRL+F"],
            "commands": ["actions.find"]
        }
    ],

    "gitlens.blame.avatars": false,
    "gitlens.blame.dateFormat": "YYYY-M-D H:m:s",
    "gitlens.currentLine.dateFormat": "YYYY-M-D H:m:s",
    "gitlens.defaultDateShortFormat": "",
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.defaultDateFormat": "YYYY-M-D H:m:s",

    "go.formatTool": "goimports",
    "go.lintTool": "golangci-lint",
    "go.enableCodeLens": {
        "references": false,
        "runtest": true
    },
    "go.testFlags": [
        "-v"
    ],
    "go.useLanguageServer": true,
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.sideBar.location": "left",
    "workbench.iconTheme": "vscode-icons",
    "workbench.activityBar.visible": true,
}